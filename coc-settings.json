{
	"languageserver": {
		"golang": {
			"command": "gopls",
			"enable": true,
			"rootPatterns": [
				"go.mod"
			],
			"filetypes": [
				"go"
			],
			"initializationOptions": {
				"gocodeCompletionEnabled": true,
				"completeUnimported": true,
				"diagnosticsEnabled": true,
				"lintTool": "golint"
			}
		},
		"bash": {
			"command": "bash-language-server",
			"args": [
				"start"
			],
			"filetypes": [
				"sh"
			],
			"ignoredRootPaths": [
				"~"
			]
		}
	}
}
